<div class="order-block">
    <h2 class="uppercase">Сделать заказ</h2>

    <div class="order-form-message"></div>
    <form id="order-form" action="">
        <input id="order-maker" type="text" placeholder="Производитель, маркировка"/>
        <input id="order-name" type="text" placeholder="Ваше имя"/>
        <input id="order-company" type="text" placeholder="Организация"/>
        <input id="order-phone" type="text" placeholder="Телефон / e-mail"/>

        <input type="submit" class="btn btn-yellow" value="Заказать"/>
    </form>
</div>